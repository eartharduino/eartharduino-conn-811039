int X[4]={13,12,11,10};

void setup() {
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(11, OUTPUT);
  pinMode(10, OUTPUT);
}


void loop() {

 for(int i=0;i<4;i++){
  digitalWrite(X[i], HIGH); 
  delay(100);
  
 }
 
 for(int i=3;i>=0;i--){
 digitalWrite(X[i], LOW); 
 delay(100);
 }

  for(int i=3;i>=0;i--){
 digitalWrite(X[i], HIGH); 
 delay(100);
 }
  for(int i=0;i<4;i++){
  digitalWrite(X[i], LOW); 
  delay(100);
  
 }
}
